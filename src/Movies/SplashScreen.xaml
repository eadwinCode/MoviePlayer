<Window x:Class="Movies.SplashScreenWindow" BorderBrush="Transparent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Splash"  WindowStyle="None" Height="150" Width="500"
        SnapsToDevicePixels="True" Topmost="True" 
        ShowInTaskbar="False" BorderThickness="0"
        AllowsTransparency="True" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FF0C1017"  >

    <Border  BorderThickness="1"  >
        <Border >
            <StackPanel  Margin="4" Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Uid="video-player.png" 
                       Grid.Row="0" Width="45" Margin="15" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" IsEnabled="True"
                       />
                <TextBlock Text="Media Hub" HorizontalAlignment="Center"
                       VerticalAlignment="Center" 
                       FontSize="60" FontWeight="Bold" Foreground="White" Background="{x:Null}"
                       Grid.ColumnSpan="2"  Padding="2"  />
            </StackPanel>
        </Border>

    </Border>
</Window>
