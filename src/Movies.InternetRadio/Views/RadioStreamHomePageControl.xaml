<UserControl x:Class="Movies.InternetRadio.Views.RadioStreamHomePageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Movies.InternetRadio.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="Black">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Movies.InternetRadio;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel MaxHeight="200">
        <Button  Width="30" DockPanel.Dock="Right" ToolTip="Close"  
                 Height="30" VerticalAlignment="Top" Command="{Binding CloseMediaControl}" 
                 HorizontalAlignment="Right" Margin="5">
            <Button.Style>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource CloseStyle}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <DockPanel Background="Black">
            <ContentControl DockPanel.Dock="Left" HorizontalAlignment="Right" Content="{Binding RadioControl}"/>
            <Grid>
                <ContentControl HorizontalAlignment="Right" Content="{Binding RadioStationDetails }"/>
                <ContentControl x:Name="MediaControlRegion" Visibility="Hidden"/>
            </Grid>
        </DockPanel>
    </DockPanel>
</UserControl>
